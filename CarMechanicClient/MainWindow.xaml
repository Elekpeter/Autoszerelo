<Window x:Class="CarMechanicClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarMechanicClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="WorkList" HorizontalAlignment="Left" Height="257" Margin="351,67,0,0" VerticalAlignment="Top" Width="422" SelectionChanged="WorkList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ügyfél neve" DisplayMemberBinding="{Binding UserName}" Width="Auto"/>
                    <GridViewColumn Header="Autó típusa" DisplayMemberBinding="{Binding Type}" Width="Auto"/>
                    <GridViewColumn Header="Rendszám" DisplayMemberBinding="{Binding LicensePlate}" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox Name="StatusList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="83,102,0,0" SelectionChanged="StatusList_SelectionChanged"/>

    </Grid>
</Window>
